<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <activity
            android:name=".RecipesActivity"
            android:exported="true" />

        <activity
            android:name=".AddRecipeActivity"
            android:exported="true" />

        <activity
            android:name=".IngredientsActivity"
            android:label="@string/ingredients_activity_label">
        </activity>

        <activity
            android:name=".RecipeRatingActivity"
            android:label="Recipe Rating Activity">
        </activity>

        <activity
            android:name=".BakingRecipesActivity"
            android:exported="true" />
        <activity
            android:name=".AddBakingRecipeActivity"
            android:exported="true" />
        <activity
            android:name=".BakingIngredientsActivity"
            android:label="@string/baking_ingredients_activity_label">
        </activity>

        <activity
            android:name=".BakingRecipeRatingActivity"
            android:label="Baking Recipe Rating Activity">
        </activity>
    </application>

</manifest>
